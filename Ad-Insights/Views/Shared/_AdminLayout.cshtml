<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Admin.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.Label("Ad-Insights", new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            User
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-toggle">
                            <li>@Html.ActionLink("Requested", "RegisteredUser", "Admin")</li>
                            <li>@Html.ActionLink("Registered", "ExistingUser", "Admin")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Product
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-toggle">
                            <li>@Html.ActionLink("Add Category", "Category", "Admin")</li>
                            <li>@Html.ActionLink("Add Product", "ProductDetail", "Admin")</li>
                            <li>@Html.ActionLink("Product Detail", "AllProduct", "Admin")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Sales Transaction", "TotalSaleByUserId", "Admin")</li>


                </ul>
                @Html.Partial("_LogoutPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        
        
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>